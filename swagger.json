            "example": "nutrition"
          },
          "type": {
            "type": "string",
            "description": "Room type",
            "enum": ["public", "private"],
            "example": "public"
          },
          "description": {
            "type": "string",
            "description": "Room description",
            "maxLength": 300,
            "example": "Room description, rules, etc."
