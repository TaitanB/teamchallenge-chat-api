    "/rooms/public": {
      "get": {
        "tags": ["Rooms"],
        "summary": "Get all public rooms",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Page number for pagination"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "Limit of items per page"
          },
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "description": "Search query by rooms"
          },
          {
            "in": "query",
            "name": "topic",
            "schema": {
              "type": "string",
              "enum": [
                "nutrition",
                "exercises",
                "mental health",
                "prevention",
                "healthy habits"
              ]
            },
            "description": "Filter rooms by topics"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "page": {
                      "type": "integer",
                      "description": "Page number for pagination",
                      "example": 1
                    },
                    "perPage": {
                      "type": "integer",
                      "description": "Quantity per page",
                      "example": 10
                    },
                    "totalPages": {
                      "type": "integer",
                      "description": "Total pages",
                      "example": 5
                    },
                    "rooms": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/RoomResponse"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          },
          "500": {
            "description": "Internal server error",
            "content": {}
          }
        }
      }
    },
